doctype html
html(lang='es')
	head
		title= headTitle
		meta(name="description", content=headDescription)
		link(rel="stylesheet", href="/css/style.css")
		link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Oswald:300|Source+Sans+Pro:300")
		link(rel="icon", href="/images/icon-web.png")
		script(async, src='https://www.google-analytics.com/analytics.js')
		script.
			function Resizer(node){
				var elem = node;
				var curH;

				function resize(h){
					elem.style.height = h+'px';
				};

				function resizeHandler(e){
					var newH =	window.innerHeight ||
								document.documentElement.clientHeight ||
								document.getElementsByTagName('body')[0].clientHeight;
					newH = newH < 850? 850 : newH;
					if(newH === curH) return; // only X changed
					resize(newH);
					curH = newH;
				};
				resizeHandler();
				window.addEventListener('resize', resizeHandler);
			}
			window.onload = function(){
				Resizer(document.getElementById('header'));
				window.onload = undefined;
			}
		script.
			window.ga=window.ga||function(){(ga.q=ga.q||[]).push(arguments)};ga.l=+new Date;
			ga('create', 'UA-83884075-1', 'auto');
			ga('send', 'pageview');
