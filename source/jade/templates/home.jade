include head
include homeBody
include footer

block vars
	- var lang = 'xxlang'
	
	- var headValues = {title:'Default title', description:'Default desc'}
	
	- var bodyValues = {}
	- bodyValues.header = {}
	- bodyValues.header.title = 'xxbv.header.title'
	- bodyValues.header.big = 'xxbv.header.big'
	- bodyValues.header.small = 'xxbv.header.small'
	- bodyValues.why = {}
	- bodyValues.why.title = 'xxbv.why.title'
	- bodyValues.why.body = []
	- bodyValues.profes = {}
	- bodyValues.profes.title = 'xxbv.profesional.title'
	- bodyValues.profes.body = 'xxbv.profesional.title'
	- bodyValues.golf = {}
	- bodyValues.golf.title = 'xxbv.golf.title'
	- bodyValues.golf.body = 'xxbv.golf.title'
	- bodyValues.chofer = {}
	- bodyValues.chofer.title = 'xxbv.golf.title'
	- bodyValues.chofer.body = 'xxbv.golf.title'
	
	- var footerValues = {}
	- footerValues.contact = 'xContacto'
	- footerValues.phone = 'xTeléfono'
	- footerValues.recommend = 'xTambién recomendamos'
	- footerValues.links = 'xLinks de interés'
	- footerValues.copyright = 'xCopyright'
	- footerValues.rights = 'xTodos los derechos reservados'
	- footerValues.created = 'xPágina web creada por'

doctype html
html(lang=lang)
	block head
		+head(headValues)
	body(class="margin0")
		+homeBody(lang, bodyValues)
		+footer(footerValues)
